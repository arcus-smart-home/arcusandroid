<androidx.cardview.widget.CardView
    android:layout_marginTop="@dimen/dp_8"
    android:layout_marginBottom="@dimen/dp_8"
    android:layout_marginStart="@dimen/sclera_widget_edge_combined"
    android:layout_marginEnd="@dimen/sclera_widget_edge_combined"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:padding="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Switch
            android:id="@id/debug_menu_binary_switch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/pt_18"
            />

        <arcus.app.common.view.ScleraTextView
            android:id="@id/debug_menu_description_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text="Description of the settings menu here"
            android:layout_marginTop="@dimen/sclera_title_to_description_spacing"
            />

        <arcus.app.common.view.ScleraTextView
            android:id="@id/debug_menu_details_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/pt_12"
            android:textColor="@color/black_with_60"
            android:layout_marginTop="@dimen/sclera_title_to_description_spacing"
            tools:text="Details would go here"
            android:textIsSelectable="true"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>
