<android.support.v7.widget.CardView
    android:layout_marginTop="@dimen/dp_8"
    android:layout_marginBottom="@dimen/dp_8"
    android:layout_marginStart="@dimen/sclera_widget_edge_combined"
    android:layout_marginEnd="@dimen/sclera_widget_edge_combined"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:padding="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <arcus.app.common.view.ScleraTextView
            android:id="@id/debug_menu_title_text_view"
            style="@style/ScleraLineSpacing.1.37"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text="Some title text here"
            app:scleraFontStyle="demi"
            android:textSize="@dimen/pt_18"
            android:layout_marginTop="@dimen/sclera_title_to_description_spacing"
            />

        <arcus.app.common.view.ScleraTextView
            android:id="@id/debug_menu_description_text_view"
            style="@style/ScleraLineSpacing.1.37"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text="Some description text here"
            app:scleraFontStyle="normal"
            android:layout_marginTop="@dimen/sclera_title_to_description_spacing"
            />

        <arcus.app.common.view.ScleraTextView
            android:id="@id/debug_menu_details_text_view"
            style="@style/ScleraLineSpacing.1.37"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/sclera_title_to_description_spacing"
            android:layout_marginBottom="16dp"
            android:textSize="@dimen/pt_12"
            android:textColor="@color/black_with_60"
            tools:text="Some detail text here"
            android:textIsSelectable="true"
            />

        <arcus.app.common.view.ScleraButton
            tools:text="Action Button"
            app:scleraButtonColor="purple_outline"
            android:layout_marginTop="@dimen/sclera_title_to_description_spacing"
            android:id="@id/debug_menu_action_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

</android.support.v7.widget.CardView>