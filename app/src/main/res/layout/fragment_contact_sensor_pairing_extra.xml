<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <arcus.app.common.view.CircularImageView
        android:id="@+id/sensor_extra_image"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <arcus.app.common.view.Version1TextView
            android:id="@+id/tvSensorPairingExtraTxtLine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/sensor_extra_pairing_step_line_1_txt"
            app:customFont="bold"
            android:layout_marginTop="10dp" />

        <arcus.app.common.view.Version1TextView
            android:id="@+id/tvSensorPairingExtraTxtLine2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/sensor_extra_pairing_step_line_2_txt"
            app:customFont="bold"
            android:layout_marginTop="5dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbSensorDoor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:button="@drawable/checkbox_selector"/>

            <arcus.app.common.view.Version1TextView
                android:id="@+id/tvSensorPairingExtraDoorTxt"
                android:layout_toRightOf="@+id/cbSensorDoor"
                android:paddingLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="7dp"
                android:text="@string/sensor_extra_door_text"
                app:customFont="bold"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:background="@color/black"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbSensorWindow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:button="@drawable/checkbox_selector"/>

            <arcus.app.common.view.Version1TextView
                android:id="@+id/tvSensorPairingExtraWindowTxt"
                android:layout_toRightOf="@+id/cbSensorWindow"
                android:paddingLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="7dp"
                android:text="@string/sensor_extra_window_text"
                app:customFont="bold"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:background="@color/black"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbSensorOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:button="@drawable/checkbox_selector"/>

            <arcus.app.common.view.Version1TextView
                android:id="@+id/tvSensorPairingExtraOtherTxt"
                android:layout_toRightOf="@+id/cbSensorOther"
                android:paddingLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="7dp"
                android:text="@string/sensor_extra_other_text"
                app:customFont="bold"/>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/next_btn_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <arcus.app.common.view.Version1Button
            android:id="@+id/nextBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/registration_button_height"
            android:layout_alignParentBottom="true"
            android:text="Next"
            app:customFont="bold"
            android:textColor="#FFFFFF"
            app:buttonFont="demi" />

    </RelativeLayout>

</LinearLayout>


