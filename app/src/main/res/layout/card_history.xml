<arcus.app.subsystems.history.view.HistoryCardItemView
    style="@style/MainCardLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="0dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/history_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/history_image_acc_text"
                android:src="@drawable/icon_service_history"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/history_title"
                android:textColor="@android:color/white"
                android:textSize="12sp"/>

            <!-- TODO: Code Refactor: Compile each history item down to a single item that repeats programmatically-->

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:shrinkColumns="2">

                <TableRow
                    android:id="@+id/card_history_row_1">

                    <arcus.app.common.view.Version1TextView
                        android:id="@+id/card_date_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:gravity="top|end"
                        android:textColor="@color/overlay_white_with_60"
                        android:textSize="10sp"/>

                    <arcus.app.common.view.Version1TextView
                        android:id="@+id/card_time_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:gravity="top|end"
                        android:paddingRight="5dp"
                        android:textColor="@color/overlay_white_with_60"
                        android:textSize="10sp"/>

                    <arcus.app.common.view.Version1TextView
                        android:id="@+id/card_actor_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:ellipsize="end"
                        android:gravity="top|start"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="12sp"/>
                </TableRow>

                <TableRow
                    android:id="@+id/card_history_row_1_1"
                    android:paddingBottom="7dp"
                    android:paddingTop="3dp">

                    <arcus.app.common.view.Version1TextView
                        android:id="@+id/card_subject_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:ellipsize="end"
                        android:gravity="top|start"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="@color/overlay_white_with_60"
                        android:textSize="12sp"/>
                </TableRow>

                <TableRow
                    android:id="@+id/card_history_row_2">

                    <arcus.app.common.view.Version1TextView
                        android:id="@+id/card_date_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:gravity="top|end"
                        android:textColor="@color/overlay_white_with_60"
                        android:textSize="10sp"/>

                    <arcus.app.common.view.Version1TextView
                        android:id="@+id/card_time_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:gravity="top|end"
                        android:paddingRight="5dp"
                        android:textColor="@color/overlay_white_with_60"
                        android:textSize="10sp"/>

                    <arcus.app.common.view.Version1TextView
                        android:id="@+id/card_actor_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:ellipsize="end"
                        android:gravity="top|start"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="12sp"/>
                </TableRow>

                <TableRow
                    android:id="@+id/card_history_row_2_2"
                    android:paddingBottom="7dp"
                    android:paddingTop="3dp">

                    <arcus.app.common.view.Version1TextView
                        android:id="@+id/card_subject_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:ellipsize="end"
                        android:gravity="top|start"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="@color/overlay_white_with_60"
                        android:textSize="12sp"/>
                </TableRow>

                <TableRow
                    android:id="@+id/card_history_row_3">

                    <arcus.app.common.view.Version1TextView
                        android:id="@+id/card_date_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:gravity="top|end"
                        android:textColor="@color/overlay_white_with_60"
                        android:textSize="10sp"/>

                    <arcus.app.common.view.Version1TextView
                        android:id="@+id/card_time_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:gravity="top|end"
                        android:paddingRight="5dp"
                        android:textColor="@color/overlay_white_with_60"
                        android:textSize="10sp"/>

                    <arcus.app.common.view.Version1TextView
                        android:id="@+id/card_actor_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:ellipsize="end"
                        android:gravity="top|start"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="12sp"/>
                </TableRow>

                <TableRow
                    android:id="@+id/card_history_row_3_3"
                    android:paddingBottom="7dp"
                    android:paddingTop="3dp">

                    <arcus.app.common.view.Version1TextView
                        android:id="@+id/card_subject_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:ellipsize="end"
                        android:gravity="top|start"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="@color/overlay_white_with_60"
                        android:textSize="12sp"/>
                </TableRow>
            </TableLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/white_with_10"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</arcus.app.subsystems.history.view.HistoryCardItemView>