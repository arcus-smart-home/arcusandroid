<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <arcus.app.common.view.ScleraTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_120"
        android:gravity="center_horizontal"
        android:textSize="@dimen/pt_18"
        android:text="@string/new_account_pair_hub"
        />

    <arcus.app.common.view.ScleraDivider
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/confetti_container"
            style="@style/ScleraColumnLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_27"
                    android:layout_gravity="center"
                    android:src="@drawable/hub_image_type_large"
                    />

                <arcus.app.common.view.ScleraTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_18"
                    android:layout_marginEnd="@dimen/dp_18"
                    android:textColor="@color/sclera_text_color_dark"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/pt_20"
                    android:lineSpacingMultiplier="1.35"
                    app:scleraFontStyle="demi"
                    android:text="@string/new_account_pair_hub_title"
                    />

                <arcus.app.common.view.ScleraTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_45"
                    android:layout_marginLeft="@dimen/dp_45"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginBottom="@dimen/dp_60"
                    android:layout_gravity="center"
                    android:textColor="@color/sclera_text_color_dark"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/pt_18"
                    android:textIsSelectable="false"
                    android:lineSpacingMultiplier="1.35"
                    android:text="@string/hub_is_heart"
                    />

                <arcus.app.common.view.ScleraButton
                    android:id="@+id/yes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/yes"
                    app:buttonColorScheme="purple"
                    />

                <arcus.app.common.view.ScleraButton
                    android:id="@+id/no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/no"
                    app:scleraButtonColor="purple_outline"
                    />

                <arcus.app.common.view.ScleraLinkView
                    android:id="@+id/dashboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_32"
                    android:layout_marginBottom="@dimen/dp_32"
                    android:gravity="center"
                    android:textSize="@dimen/pt_14"
                    app:html="@string/take_to_dashboard"
                    />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>