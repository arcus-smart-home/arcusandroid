<LinearLayout
    android:id="@+id/sclera_banner"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/sclera_warning"
    android:paddingTop="@dimen/dp_20"
    android:paddingBottom="@dimen/dp_20"
    android:paddingLeft="@dimen/dp_18"
    android:paddingRight="@dimen/dp_18"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:visibility="gone" >

    <ImageView
        android:id="@+id/alert_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_alert_noconnection_outline"
        android:contentDescription="@string/banner_icon_content_description"/>

    <arcus.app.common.view.ScleraTextView
        android:id="@+id/banner_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:textSize="@dimen/pt_14"
        app:scleraFontStyle="demi"
        android:textColor="@color/sclera_text_color_dark"
        android:contentDescription="@string/banner_text_content_description"
        tools:text="Banner text here" />

    <ImageView
        android:id="@+id/chevron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/chevron"
        android:contentDescription="@string/chevron_content_description"/>
</LinearLayout>
