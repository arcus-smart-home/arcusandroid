    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/white"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/arcus_icon_title"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                />

            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/sclera_text_color_dark"/>

        </RelativeLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/confetti_container"
                    style="@style/Widget.Arcus.Column"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="40dp"
                                android:src="@drawable/check_icon_type_large" />

                            <arcus.app.common.view.ScleraTextView
                                style="@style/Widget.Arcus.TextAppearance.Title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="40dp"
                                android:gravity="center"
                                android:text="@string/new_account_confetti_title" />

                            <arcus.app.common.view.ScleraTextView
                                style="@style/Widget.Arcus.TextAppearance.Subtitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/new_account_confetti_subtitle" />

                            <arcus.app.common.view.ScleraTextView
                                style="@style/Widget.Arcus.TextAppearance.Body.Medium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="15dp"
                                android:gravity="center"
                                android:paddingLeft="60dp"
                                android:paddingRight="60dp"
                                android:text="@string/new_account_confetti_desc" />

                        </LinearLayout>
                    </ScrollView>

                    <Button
                        android:id="@+id/next"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="@string/new_account_confetti_button"
                        style="@style/Widget.Arcus.Button.Purple"
                        android:layout_alignParentBottom="true"/>

                </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
