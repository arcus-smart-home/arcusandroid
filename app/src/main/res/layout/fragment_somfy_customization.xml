<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/somfy_configure_open"
            android:layout_margin="15dp"
            android:textSize="18sp"
            android:gravity="center"
            android:text="@string/somfy_configure_open"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/somfy_configure_open_des"
            android:paddingRight="50dp"
            android:paddingLeft="50dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/somfy_configure_open_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white_with_60"
            android:layout_gravity="center_horizontal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:paddingBottom="10dp"
            android:background="@color/white_with_60"/>

        <TextView
            android:id="@+id/somfy_configure_closed"
            android:layout_margin="15dp"
            android:textSize="18sp"
            android:text="@string/somfy_configure_closed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/somfy_configure_closed_des"
            android:paddingRight="50dp"
            android:paddingLeft="50dp"
            android:paddingTop="10dp"
            android:text="@string/somfy_configure_closed_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white_with_60"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</ScrollView>