<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/people_and_places_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <ScrollView
        android:id="@+id/pin_or_place_listing_container"
        android:visibility="gone"
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:id="@+id/text_view_linear_layout"
                android:orientation="vertical"
                tools:visibility="visible"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text_view1"
                    style="@style/Widget.Arcus.TextAppearance.Body.Large"
                    android:gravity="center"
                    android:layout_margin="@dimen/keyline_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Top Text View Text"
                    />

                <View
                    style="@style/Widget.Arcus.Divider"
                    />
            </LinearLayout>

            <LinearLayout
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                android:id="@+id/places_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
