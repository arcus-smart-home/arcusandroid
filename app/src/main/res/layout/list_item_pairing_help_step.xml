<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_20"
    android:layout_marginStart="71dp"
    android:layout_marginEnd="71dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/step_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/step1" />

    <arcus.app.common.view.ScleraTextView
        android:id="@+id/step_content"
        android:paddingStart="15dp"
        android:paddingEnd="0dp"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/pt_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/step_number"
        app:layout_constraintTop_toTopOf="parent"
        app:scleraFontStyle="normal"
        tools:text="If possible, move the device closer to the Arcus hub and make sure the image is aligned to the baseline of the text." />

</androidx.constraintlayout.widget.ConstraintLayout>

