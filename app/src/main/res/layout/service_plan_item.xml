<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:contentDescription="@string/settings_place"
        tools:src="@drawable/image_placeholder"
        android:layout_gravity="center_vertical"
        android:id="@+id/place_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <arcus.app.common.view.Version1TextView
            tools:text="Place Name"
            tools:textColor="@color/black_with_80"
            android:id="@+id/place_name"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            app:customFont="demi"
            />

        <arcus.app.common.view.Version1TextView
            tools:text="Place Location"
            tools:textColor="@color/black_with_80"
            android:id="@+id/place_street"
            android:textColor="@color/white_with_60"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <arcus.app.common.view.Version1TextView
            tools:text="Place Location"
            tools:textColor="@color/black_with_80"
            android:id="@+id/place_location"
            android:textColor="@color/white_with_60"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <arcus.app.common.view.Version1TextView
            tools:text="Place Service Level"
            tools:textColor="@color/black_with_80"
            android:id="@+id/plan_service_level"
            android:textColor="@color/white_with_60"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:customFont="italic"
            />

        <arcus.app.common.view.Version1TextView
            tools:text="Place Addons"
            tools:textColor="@color/black_with_80"
            android:id="@+id/plan_addons"
            android:textColor="@color/white_with_60"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <View
            android:id="@+id/divider"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/white_with_20"
            tools:visibility="visible"
            tools:background="@color/black_with_35"
            />
    </LinearLayout>
</LinearLayout>