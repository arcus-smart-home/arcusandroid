<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/settings_promon_permit_layout"
        tools:visibility="visible"
        android:visibility="visible"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <arcus.app.common.view.Version1TextView
                tools:textColor="@color/black"
                android:text="@string/settings_promon_permit_title"
                android:id="@+id/promon_settings_permit_title"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <arcus.app.common.view.Version1TextView
                tools:textColor="@color/black_with_60"
                android:text="@string/settings_promon_permit_desc"
                android:id="@+id/promon_settings_permit_desc"
                android:layout_below="@id/promon_settings_permit_title"
                android:layout_marginTop="5dp"
                android:textColor="@color/white_with_60"
                app:customFont="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                tools:src="@drawable/chevron"
                android:contentDescription="@string/content_description_chevron"
                android:src="@drawable/chevron_white"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <View
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:background="@color/white_with_20"
            tools:background="@color/black_with_20"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/settings_promon_additional_directions_layout"
        tools:visibility="visible"
        android:visibility="visible"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="0dp"
            android:layout_height="1dp"
            android:background="@color/white_with_20"
            tools:background="@color/black_with_20"
            />
        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <arcus.app.common.view.Version1TextView
                tools:textColor="@color/black"
                android:text="@string/settings_promon_additional_directions_title"
                android:id="@+id/settings_promon_additional_directions_title"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <arcus.app.common.view.Version1TextView
                tools:textColor="@color/black_with_60"
                android:text="@string/settings_promon_additional_directions_desc"
                android:id="@+id/settings_promon_additional_directions_desc"
                android:layout_below="@id/settings_promon_additional_directions_title"
                android:layout_marginTop="5dp"
                android:textColor="@color/white_with_60"
                app:customFont="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                tools:src="@drawable/chevron"
                android:contentDescription="@string/content_description_chevron"
                android:src="@drawable/chevron_white"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <View
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:background="@color/white_with_20"
            tools:background="@color/black_with_20"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/settings_promon_gate_access_layout"
        tools:visibility="visible"
        android:visibility="visible"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="0dp"
            android:layout_height="1dp"
            android:background="@color/white_with_20"
            tools:background="@color/black_with_20"
            />
        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <arcus.app.common.view.Version1TextView
                tools:textColor="@color/black"
                android:text="@string/settings_promon_gate_access_title"
                android:id="@+id/settings_promon_gate_access_title"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <arcus.app.common.view.Version1TextView
                tools:textColor="@color/black_with_60"
                android:text="@string/settings_promon_gate_access_desc"
                android:id="@+id/settings_promon_gate_access_desc"
                android:layout_below="@id/settings_promon_gate_access_title"
                android:layout_marginTop="5dp"
                android:textColor="@color/white_with_60"
                app:customFont="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                tools:src="@drawable/chevron"
                android:contentDescription="@string/content_description_chevron"
                android:src="@drawable/chevron_white"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <View
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:background="@color/white_with_20"
            tools:background="@color/black_with_20"
            />
    </LinearLayout>

    <LinearLayout
    android:id="@+id/settings_promon_first_responder_info_layout"
    tools:visibility="visible"
    android:visibility="visible"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:layout_height="1dp"
        android:background="@color/white_with_20"
        tools:background="@color/black_with_20"
        />
    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <arcus.app.common.view.Version1TextView
            tools:textColor="@color/black"
            android:text="@string/settings_promon_first_responder_info_title"
            android:id="@+id/settings_promon_first_responder_info_title"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <arcus.app.common.view.Version1TextView
            tools:textColor="@color/black_with_60"
            android:text="@string/settings_promon_first_responder_info_desc"
            android:id="@+id/settings_promon_first_responder_info_desc"
            android:layout_below="@id/settings_promon_first_responder_info_title"
            android:layout_marginTop="5dp"
            android:textColor="@color/white_with_60"
            app:customFont="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            tools:src="@drawable/chevron"
            android:contentDescription="@string/content_description_chevron"
            android:src="@drawable/chevron_white"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <View
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="@color/white_with_20"
        tools:background="@color/black_with_20"
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/settings_promon_who_lives_here_layout"
        tools:visibility="visible"
        android:visibility="visible"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="0dp"
            android:layout_height="1dp"
            android:background="@color/white_with_20"
            tools:background="@color/black_with_20"
            />
        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <arcus.app.common.view.Version1TextView
                tools:textColor="@color/black"
                android:text="@string/settings_promon_who_lives_here_title"
                android:id="@+id/settings_promon_who_lives_here_title"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <arcus.app.common.view.Version1TextView
                tools:textColor="@color/black_with_60"
                android:text="@string/settings_promon_who_lives_here_desc"
                android:id="@+id/settings_promon_who_lives_here_desc"
                android:layout_below="@id/settings_promon_who_lives_here_title"
                android:layout_marginTop="5dp"
                android:textColor="@color/white_with_60"
                app:customFont="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                tools:src="@drawable/chevron"
                android:contentDescription="@string/content_description_chevron"
                android:src="@drawable/chevron_white"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <View
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:background="@color/white_with_20"
            tools:background="@color/black_with_20"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_margin="15dp"
        android:gravity="bottom"
        android:orientation="vertical">

        <arcus.app.common.view.Version1Button
            android:id="@+id/settings_promon_download_certificate_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_promon_download_certificate_button_text"
            app:buttonColorScheme="light"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>