<ScrollView
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true" >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ScleraColumnLayout">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/product_image"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_marginTop="@dimen/dp_20"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/camera_image"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_marginBottom="@dimen/dp_8"
            android:scaleType="centerCrop"
            android:src="@drawable/camera_button"
            app:layout_constraintBottom_toBottomOf="@+id/product_image"
            app:layout_constraintStart_toStartOf="@+id/guideline"/>

        <arcus.app.common.view.ScleraTextView
            android:id="@+id/step_title"
            style="@style/ScleraLineSpacing.1.37"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sclera_widget_edge_combined"
            android:gravity="center"
            android:textSize="@dimen/pt_18"
            app:scleraFontStyle="demi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/product_image"
            tools:text="Give your device a name"
            />

        <arcus.app.common.view.ScleraEditText
            android:id="@+id/input_field"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sclera_widget_edge_combined"
            android:ellipsize="end"
            android:textSize="@dimen/pt_16"
            android:maxLength="48"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:inputType="textImeMultiLine"
            app:met_floatingLabelText="@string/device_name_generic"
            app:met_maxCharacters="48"
            app:resettable="false"
            tools:layout_height="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/step_title" />

        <arcus.app.common.view.ScleraTextView
            android:id="@+id/step_instructions"
            style="@style/ScleraLineSpacing.1.37"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginBottom="@dimen/sclera_widget_edge_combined"
            android:gravity="center"
            android:textSize="@dimen/pt_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_field"
            app:layout_constraintBottom_toTopOf="@id/buttons_container"
            tools:text="We reommend using simple, identifying language that is easily recognizable by voice assistants"
            tools:visibility="visible"/>

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_percent="0.65"
            app:layout_constraintStart_toStartOf="parent"/>


        <LinearLayout
            android:id="@+id/buttons_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/step_instructions"
            android:layout_marginBottom="@dimen/dp_24"
            android:gravity="bottom"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" >

            <arcus.app.common.view.ScleraButton
                android:id="@+id/next_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_8"
                android:text="@string/pairing_next"
                app:buttonColorScheme="purple"/>

            <arcus.app.common.view.ScleraButton
                android:id="@+id/cancel_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cancel_text"
                android:visibility="gone"
                app:scleraButtonColor="purple_outline"
                tools:visibility="visible"/>
        </LinearLayout>

        </android.support.constraint.ConstraintLayout>
</ScrollView>
