<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp">

        <arcus.app.common.view.Version1TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/people_access_type"
            android:textSize="16sp"
            app:customFont="demi" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_with_35" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/full_access_region"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/circle_hollow_black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="25dp"
                    android:orientation="vertical">

                    <arcus.app.common.view.Version1TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/people_full_access_email_required"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:customFont="demi" />

                    <arcus.app.common.view.Version1TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/people_full_access_desc"
                        android:textColor="@color/black_with_60"
                        app:customFont="italic" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/full_access_info_region"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/black_with_35" />

            <RelativeLayout
                android:id="@+id/locks_alarms_notifications_region"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/circle_hollow_black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="25dp"
                    android:orientation="vertical">

                    <arcus.app.common.view.Version1TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/people_partial_access"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:customFont="demi"  />

                    <arcus.app.common.view.Version1TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/people_partial_access_desc"
                        android:textColor="@color/black_with_60"
                        app:customFont="italic" />
                    <arcus.app.common.view.Version1TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/people_partial_access_info"
                        android:textColor="@color/black_with_60"
                        app:customFont="italic" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/locks_alarms_notifications_info_region"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>