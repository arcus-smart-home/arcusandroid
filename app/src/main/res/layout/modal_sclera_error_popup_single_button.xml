<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/sclera_alert"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/keyline_4"
    android:paddingEnd="@dimen/keyline_4"
    android:paddingTop="@dimen/keyline_5" >

    <TextView
        android:id="@+id/modal_error_title"
        style="@style/Widget.Arcus.TextAppearance.Body.Large.ErrorTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="The error title will go here."
        />

    <TextView
        android:id="@+id/modal_error_description"
        style="@style/Widget.Arcus.TextAppearance.Body.ErrorDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/keyline_4"
        android:gravity="center"
        tools:text="The error description will go here."
        />

    <Button
        android:id="@+id/modal_error_dismiss_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/keyline_5"
        android:layout_marginBottom="@dimen/keyline_4"
        android:text="@string/dismiss_text"
        android:textAllCaps="true"
        style="@style/Widget.Arcus.Button.White.RedText" />

</LinearLayout>
