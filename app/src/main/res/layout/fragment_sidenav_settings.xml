<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/side_nav_settings_container"
    android:paddingTop="@dimen/keyline_4"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!-- Profile -->
    <RelativeLayout
        android:id="@+id/profileContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/keyline_4"
        android:layout_marginEnd="@dimen/keyline_4"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/imageView1"
            >

            <TextView
                style="@style/Widget.Arcus.TextAppearance.ListItemHeader"
                android:text="@string/profile"
                android:layout_marginTop="@dimen/keyline_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                style="@style/Widget.Arcus.TextAppearance.ListItemDescription"
                android:text="@string/sidenav_settings_account_bottom"
                android:layout_marginTop="@dimen/keyline_2"
                android:layout_marginBottom="@dimen/keyline_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <ImageView
            style="@style/Widget.Arcus.ImageView.ItemRow.Darken"
            android:contentDescription="@string/content_description_chevron"
            android:id="@+id/imageView1"
            android:src="@drawable/chevron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>

    <View
        style="@style/Widget.Arcus.Divider"
        android:layout_marginTop="@dimen/keyline_2"
        android:layout_marginStart="@dimen/keyline_4"
        android:layout_marginBottom="@dimen/keyline_2"
        />


    <!-- People -->
    <RelativeLayout
        android:id="@+id/peopleContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/keyline_4"
        android:layout_marginEnd="@dimen/keyline_4"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/imageView2"
            >

            <TextView
                style="@style/Widget.Arcus.TextAppearance.ListItemHeader"
                android:text="@string/sidenav_settings_people_top"
                android:layout_marginTop="@dimen/keyline_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                style="@style/Widget.Arcus.TextAppearance.ListItemDescription"
                android:text="@string/sidenav_settings_people_bottom"
                android:layout_marginTop="@dimen/keyline_2"
                android:layout_marginBottom="@dimen/keyline_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <ImageView
            style="@style/Widget.Arcus.ImageView.ItemRow.Darken"
            android:contentDescription="@string/content_description_chevron"
            android:id="@+id/imageView2"
            android:src="@drawable/chevron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>

    <View
        style="@style/Widget.Arcus.Divider"
        android:layout_marginTop="@dimen/keyline_2"
        android:layout_marginStart="@dimen/keyline_4"
        android:layout_marginBottom="@dimen/keyline_2"
        />

    <!-- Places -->
    <RelativeLayout
        android:id="@+id/placesContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/keyline_4"
        android:layout_marginEnd="@dimen/keyline_4"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/imageView3"
            >

            <TextView
                style="@style/Widget.Arcus.TextAppearance.ListItemHeader"
                android:text="@string/sidenav_settings_places_top"
                android:layout_marginTop="@dimen/keyline_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                style="@style/Widget.Arcus.TextAppearance.ListItemDescription"
                android:text="@string/sidenav_settings_places_bottom"
                android:layout_marginTop="@dimen/keyline_2"
                android:layout_marginBottom="@dimen/keyline_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <ImageView
            style="@style/Widget.Arcus.ImageView.ItemRow.Darken"
            android:contentDescription="@string/content_description_chevron"
            android:id="@+id/imageView3"
            android:src="@drawable/chevron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>

    <View
        style="@style/Widget.Arcus.Divider"
        android:layout_marginTop="@dimen/keyline_2"
        android:layout_marginStart="@dimen/keyline_4"
        android:layout_marginBottom="@dimen/keyline_2"
        />

    <!-- Invitation(s) -->
    <RelativeLayout
        android:id="@+id/invitationContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/keyline_4"
        android:layout_marginEnd="@dimen/keyline_4"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/imageView4"
            >

            <TextView
                style="@style/Widget.Arcus.TextAppearance.ListItemHeader"
                android:text="@string/sidenav_settings_invitation_top"
                android:layout_marginTop="@dimen/keyline_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                style="@style/Widget.Arcus.TextAppearance.ListItemDescription"
                android:text="@string/sidenav_settings_invitation_bottom"
                android:layout_marginTop="@dimen/keyline_2"
                android:layout_marginBottom="@dimen/keyline_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <ImageView
            style="@style/Widget.Arcus.ImageView.ItemRow.Darken"
            android:contentDescription="@string/content_description_chevron"
            android:id="@+id/imageView4"
            android:src="@drawable/chevron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
</LinearLayout>
