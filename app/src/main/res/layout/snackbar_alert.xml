<!--
    This doesn't need padding or margins on it since the snackbar itself
    adds in some padding/margin on the left / right screen edges
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/sclera_snackbar_height"
    android:background="@color/sclera_alert"
    >
    <arcus.app.common.view.ScleraTextView
        android:id="@+id/description_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:scleraFontStyle="normal"
        android:paddingTop="@dimen/dp_24"
        android:paddingBottom="@dimen/dp_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/action_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Your Snackbar message here"
        />

    <Button
        android:visibility="gone"
        tools:visibility="visible"
        android:id="@+id/action_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="View"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textSize="14sp"
        android:paddingTop="@dimen/dp_24"
        android:paddingBottom="@dimen/dp_24"
        android:textColor="@color/white"
        android:textAllCaps="true"
        style="?attr/borderlessButtonStyle"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
