<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:visibility="invisible"
    tools:visibility="visible"
    android:id="@+id/profile_settings_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <include layout="@layout/photo_layout"/>

        <arcus.app.common.view.Version1TextView
            android:id="@+id/account_settings_person_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:gravity="center"
            tools:text="First Name Last Name"
            tools:textColor="@color/black"
            android:textColor="@color/white"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="15dp"
            android:background="@color/white_with_20"
            tools:background="@color/black_with_20"
            />

        <LinearLayout
            android:id="@+id/contact_info_container"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <arcus.app.common.view.Version1TextView
                android:textColor="@color/white"
                tools:textColor="@color/black"
                android:textAllCaps="true"
                android:text="@string/account_settings_contact_info"
                android:textSize="12dp"
                app:customFont="demi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:scaleType="fitEnd"
                android:src="@drawable/chevron_white"
                tools:src="@drawable/chevron"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/white_with_20"
            tools:background="@color/black_with_20"
            />


        <LinearLayout
            android:id="@+id/security_questions_container"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <arcus.app.common.view.Version1TextView
                android:textColor="@color/white"
                tools:textColor="@color/black"
                android:textAllCaps="true"
                android:text="@string/account_settings_security"
                android:textSize="12dp"
                app:customFont="demi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:scaleType="fitEnd"
                android:src="@drawable/chevron_white"
                tools:src="@drawable/chevron"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/white_with_20"
            tools:background="@color/black_with_20"
            />

        <LinearLayout
            android:id="@+id/pin_code_container"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <arcus.app.common.view.Version1TextView
                android:textColor="@color/white"
                tools:textColor="@color/black"
                android:textAllCaps="true"
                android:text="@string/change_pincode"
                android:textSize="12dp"
                app:customFont="demi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:scaleType="fitEnd"
                android:src="@drawable/chevron_white"
                tools:src="@drawable/chevron"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/white_with_20"
            tools:background="@color/black_with_20"
            />

        <LinearLayout
            android:id="@+id/fingerprint_container"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <arcus.app.common.view.Version1TextView
                android:textColor="@color/white"
                tools:textColor="@color/black"
                android:textAllCaps="true"
                android:text="@string/fingerprint_title"
                android:textSize="12dp"
                app:customFont="demi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:scaleType="fitEnd"
                android:src="@drawable/chevron_white"
                tools:src="@drawable/chevron"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/white_with_20"
            tools:background="@color/black_with_20"
            />

        <LinearLayout
            android:id="@+id/push_notifications_container"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <arcus.app.common.view.Version1TextView
                android:textColor="@color/white"
                tools:textColor="@color/black"
                android:textAllCaps="true"
                android:text="@string/account_settings_push_notifications"
                android:textSize="12dp"
                app:customFont="demi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:scaleType="fitEnd"
                android:src="@drawable/chevron_white"
                tools:src="@drawable/chevron"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/white_with_20"
            tools:background="@color/black_with_20"
            />

        <LinearLayout
            android:id="@+id/billing_container"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <arcus.app.common.view.Version1TextView
                android:textColor="@color/white"
                tools:textColor="@color/black"
                android:textAllCaps="true"
                android:text="@string/account_settings_billing"
                android:textSize="12dp"
                app:customFont="demi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:scaleType="fitEnd"
                android:src="@drawable/chevron_white"
                tools:src="@drawable/chevron"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/white_with_20"
            tools:background="@color/black_with_20"
            />

        <LinearLayout
            android:id="@+id/marketing_container"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <arcus.app.common.view.Version1TextView
                android:textColor="@color/white"
                tools:textColor="@color/black"
                android:textAllCaps="true"
                android:text="@string/account_settings_marketing"
                android:textSize="12dp"
                app:customFont="demi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:scaleType="fitEnd"
                android:src="@drawable/chevron_white"
                tools:src="@drawable/chevron"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/white_with_20"
            tools:background="@color/black_with_20"
            />

        <LinearLayout
            android:id="@+id/terms_container"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <arcus.app.common.view.Version1TextView
                android:textColor="@color/white"
                tools:textColor="@color/black"
                android:textAllCaps="true"
                android:text="@string/terms_of_use"
                android:textSize="12dp"
                app:customFont="demi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:scaleType="fitEnd"
                android:src="@drawable/chevron_white"
                tools:src="@drawable/chevron"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/white_with_20"
            tools:background="@color/black_with_20"
            />

        <LinearLayout
            android:id="@+id/delete_container"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <arcus.app.common.view.Version1TextView
                android:textColor="@color/white"
                tools:textColor="@color/black"
                android:textAllCaps="true"
                android:text="@string/delete_my_arcus_account"
                android:textSize="12dp"
                app:customFont="demi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:scaleType="fitEnd"
                android:src="@drawable/chevron_white"
                tools:src="@drawable/chevron"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
