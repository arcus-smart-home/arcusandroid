<resources>

    <style name="DashboardTheme" parent="AppTheme">
        <item name="android:textViewStyle">@style/DashboardTheme.TextView</item>
        <item name="android:editTextStyle">@style/DashboardTheme.EditText</item>
        <item name="android:buttonStyle">@style/DashboardTheme.Button</item>
        <item name="android:scrollViewStyle">@style/DashboardTheme.ScrollView</item>
    </style>

    <!-- ActionBar styles -->
    <style name="DashboardTheme.ActionBar"
        parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:displayOptions">showHome|showTitle</item>
        <item name="displayOptions">showHome|showTitle</item>
    </style>

    <style name="DashboardTheme.TextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DashboardTheme.EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/arcus_gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DashboardTheme.ScrollView" parent="android:Widget.ScrollView">
        <item name="android:scrollbars">none</item>
    </style>

    <style name="DashboardTheme.Button" parent="@android:style/Widget.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DashboardDialog" parent="android:Theme.Dialog">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">bottom</item>

        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>
</resources>
