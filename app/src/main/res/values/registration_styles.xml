<resources>

    <!-- Base application theme. -->
    <style name="RegistrationTheme" parent="AppTheme">
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:editTextStyle">@style/RegistrationEditText</item>
        <item name="android:textViewStyle">@style/RegistrationTextView</item>
        <item name="android:buttonStyle">@style/RegistrationContinueButton</item>
        <item name="android:dropDownSpinnerStyle">@style/RegistrationSpinner</item>
        <item name="android:spinnerStyle">@style/RegistrationSpinner</item>
        <item name="android:spinnerItemStyle">@style/RegistrationSpinnerItem</item>
        <item name="android:radioButtonStyle">@style/RegistrationRadioButton</item>
        <item name="android:checkboxStyle">@style/RegistrationSubscriptionCheck</item>
        <item name="android:scrollViewStyle">@style/RegistrationScrollView</item>
    </style>

    <style name="RegistrationToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="RegistrationToolbar.Popup" parent="ThemeOverlay.AppCompat.Light">

    </style>

    <!-- ActionBar styles -->
    <style name="RegistrationActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@android:color/white</item>
        <item name="android:displayOptions">showHome|showTitle</item>
        <item name="android:icon">@drawable/ic_launcher</item>

        <!-- Support library compatibility -->
        <item name="background">@android:color/white</item>
        <item name="displayOptions">showHome|showTitle</item>
        <item name="icon">@drawable/ic_launcher</item>
    </style>


    <style name="RegistrationEditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/arcus_gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RegistrationSpinner" parent="@style/Widget.AppCompat.Spinner.Underlined">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="SpinnerAppTheme" parent="android:Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/apptheme_spinner_background_holo_light</item>
        <item name="android:dropDownSelector">@drawable/apptheme_list_selector_holo_light</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="RegistrationSpinnerItem" parent="android:Widget.Holo.TextView.SpinnerItem">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="RegistrationTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorLink">#454345</item>
    </style>

    <style name="RegistrationContinueButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/registration_continue</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RegistrationRadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RegistrationSubscriptionCheck" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="RegistrationTitle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/registrationLightGray</item>
    </style>

    <style name="RegistrationLinkButton" parent="RegistrationTextView">
        <item name="android:textColor">@color/registrationDarkBlue</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="RegistrationDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="RegistrationSmallBlueText" parent="RegistrationTextView">
        <item name="android:textColor">@color/registrationDarkBlue</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RegistrationScrollView" parent="android:Widget.ScrollView">
        <item name="android:scrollbars">none</item>
    </style>

</resources>
