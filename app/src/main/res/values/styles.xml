<resources>
    <!-- Base Widgets -->
    <style name="Widget"/>
    <style name="Widget.Arcus" />

    <!-- Radio Button -->
    <style name="Widget.Arcus.RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/nunito_demi</item>
        <item name="buttonCompat">@drawable/sclera_checkbox_selector</item>
        <item name="android:button">@drawable/sclera_checkbox_selector</item>
        <item name="buttonTint">@color/sclera_green_tutorial_banner</item>
        <item name="android:buttonTint">@color/sclera_green_tutorial_banner</item>
    </style>

    <!-- CheckedText -->
    <style name="Widget.Arcus.CheckedTextItem" parent="Widget.AppCompat.TextView">
        <item name="android:drawableStart">@drawable/sclera_checkbox_selector</item>
        <item name="drawableTint">@color/checked_text_enabled_disabled_tint</item>
        <item name="android:drawablePadding">@dimen/keyline_2</item>
        <item name="android:textAppearance">@style/Widget.Arcus.TextAppearance.Body.Medium</item>
    </style>

    <!-- Button -->
    <style name="Widget.Arcus.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/nunito_demi</item>
        <item name="android:textSize">18sp</item>
        <item name="textSize">18sp</item>
        <item name="android:minHeight">54dp</item>
    </style>
    <style name="Widget.Arcus.Button.Purple">
        <item name="android:background">@drawable/button_rounded_white</item>
        <item name="background">@drawable/button_rounded_white</item>
        <item name="android:backgroundTint">@color/button_purple_color</item>
        <item name="backgroundTint">@color/button_purple_color</item>
        <item name="android:textColor">@color/button_purple_text_color</item>
    </style>
    <style name="Widget.Arcus.Button.White">
        <item name="android:background">@drawable/button_rounded_white</item>
        <item name="background">@drawable/button_rounded_white</item>
        <item name="android:backgroundTint">@color/button_white_color</item>
        <item name="backgroundTint">@color/button_white_color</item>
    </style>
    <style name="Widget.Arcus.Button.White.BlueText">
        <item name="android:textColor">@color/button_blue_text_color</item>
    </style>
    <style name="Widget.Arcus.Button.White.RedText">
        <item name="android:textColor">@color/button_red_text_color</item>
    </style>
    <style name="Widget.Arcus.Button.PurpleOutline">
        <item name="android:background">@drawable/outline_rounded_button_style</item>
        <item name="background">@drawable/outline_rounded_button_style</item>
        <item name="android:backgroundTint">@color/button_purple_outline_color</item>
        <item name="backgroundTint">@color/button_purple_outline_color</item>
        <item name="android:textColor">@color/button_purple_outline_text_color</item>
    </style>
    <style name="Widget.Arcus.Button.WhiteOutline">
        <item name="android:background">@drawable/outline_rounded_button_style</item>
        <item name="background">@drawable/outline_rounded_button_style</item>
        <item name="android:backgroundTint">@color/button_white_outline_color</item>
        <item name="backgroundTint">@color/button_white_outline_color</item>
        <item name="android:textColor">@color/button_white_outline_text_color</item>
    </style>


    <!-- Text View -->
    <style name="Widget.Arcus.TextView" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:lineSpacingMultiplier">@dimen/textViewLineSpacingMultiplier</item>
    </style>
    <style name="Widget.Arcus.TextView.Light">
        <item name="android:textColor">@color/white</item>
    </style>


    <!-- Edit Text -->
    <style name="Widget.Arcus.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:lineSpacingMultiplier">@dimen/textViewLineSpacingMultiplier</item>

        <item name="errorTextAppearance">@style/Widget.Arcus.TextInputLayout.ErrorTextAppearance</item>
        <item name="hintTextAppearance">@style/Widget.Arcus.TextInputLayout.HintTextAppearance</item>

        <!-- At rest, hint color - uses a selector. -->
        <item name="android:textColorHint">@color/text_input_hint_color</item>
    </style>

    <style name="Widget.Arcus.TextInputLayout.EditText" parent="Widget.AppCompat.EditText">
        <!-- Inactive underline color -->
        <item name="colorControlNormal">@color/arcus_gray</item>

        <!-- Cursor and Active underline color, uses colorAccent by default if not defined -->
        <item name="colorControlActivated">@color/arcus_dark_gray</item>
    </style>

    <style name="Widget.Arcus.TextInputLayout.HintTextAppearance" parent="TextAppearance.Design.Hint">
        <!-- Active hint label color -->
        <item name="android:textColor">@color/arcus_dark_gray</item>
    </style>

    <style name="Widget.Arcus.TextInputLayout.ErrorTextAppearance" parent="TextAppearance.Design.Error">
        <!-- Error text color -->
        <item name="android:textColor">@color/sclera_alert</item>
    </style>

    <style name="Widget.Arcus.ActionButton.Overflow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:contentDescription">@string/accessibility_overflow</item>
    </style>

    <style name="Widget.Arcus.Switch">
        <!-- thumb & track color -->
        <item name="colorControlActivated">@color/sclera_success</item>
    </style>

    <style name="Widget.Arcus.ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="colorAccent">@color/sclera_tab_green</item>
    </style>

    <style name="Widget.Arcus.ProgressBar.Indeterminate" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/sclera_tab_green</item>
    </style>

    <style name="Widget.Arcus.ProgressBar.Indeterminate.White">
        <item name="colorAccent">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="Widget.Arcus.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/sclera_tab_unselected_grey</item>
        <item name="tabSelectedTextColor">@color/sclera_tab_green</item>
        <item name="tabIndicatorColor">@color/sclera_tab_green</item>
        <item name="tabTextAppearance">@style/Widget.Arcus.TabLayout.Items</item>
    </style>

    <style name="Widget.Arcus.TabLayout.Items" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/nunito_demi</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14pt</item>
    </style>

    <style name="Widget.Arcus.Divider">
        <item name="android:background">@color/black_with_20</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="Widget.Arcus.Activity.Animation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/enter_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/exit_to_right</item>
    </style>

    <style name="Widget.Arcus.Activity.Animation.WorkflowHost" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/enter_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_through_bottom</item>
    </style>

    <style name="Widget.Arcus.Activity.Animation.Workflow" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_through_bottom</item>
    </style>

    <style name="Widget.Arcus.HeadingRow">
        <item name="android:padding">@dimen/keyline_2</item>
        <item name="android:background">@color/arcus_med_light_gray</item>
        <item name="android:textViewStyle">@style/Widget.Arcus.TextView.HeadingRow</item>
    </style>

    <style name="Widget.Arcus.TextView.HeadingRow">
        <item name="android:textColor">@color/arcus_dark_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.Arcus.ImageView.ItemRow.Darken" parent="">
        <item name="android:tint">@color/black</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="Widget.Arcus.ImageView.ItemRow.Darken.ImageOnly">
        <item name="android:tintMode">src_in</item>
        <item name="android:backgroundTint">@null</item>
    </style>

    <style name="Widget.Arcus.ImageView.ItemRow.Lighten" parent="">
        <item name="android:tint">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <!-- TODO: This need to be nuked... But slightly more sensitive to immediate nuking. -->
    <style name="Widget.Arcus.Column">
        <item name="android:layout_marginLeft">17dp</item>
        <item name="android:layout_marginRight">17dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
    </style>

    <!-- TODO: Need to decide what to do with this... -->
    <style name="SeekArc">
        <item name="arcColor">@color/white_with_10</item>
    </style>
</resources>
