        <!--        <item name="colorPrimaryDark">@color/cool_gradient_blue</item>-->
        <!--        <item name="colorAccent">@color/sclera_green</item>-->
        <!--        <item name="colorSecondary">@color/sclera_green</item>-->
        <!--        <item name="colorOnBackground">@color/sclera_green</item>-->
